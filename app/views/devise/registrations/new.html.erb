<div class="UserInput">
  <h2 class="UserInput--title">新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, "ユーザーID", class: "field--item" %>
      <%= f.text_field :name, autofocus: true, placeholder: "例) user123", class: "field--input" %>
    </div>

    <div class="field">
      <%= f.label :nickname, "ニックネーム", class: "field--item" %>
      <%= f.text_field :nickname, autocomplete: "name", placeholder: "例) あいうえお", class: "field--input" %>
    </div>

    <div class="field">
      <%= f.label :email, "Eメール", class: "field--item" %>
      <%= f.email_field :email, autocomplete: "email", placeholder: "例) abcde@abcde", class: "field--input" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード (8文字以上)", class: "field--item" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "field--input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認用パスワード", class: "field--item" %>
      <%= f.password_field :password_confirmation, class: "field--input" %>
    </div>

    <div class="actions">
      <%= f.submit "登録する", class: "actions--btn" %>
    </div>
  <% end %>
</div>