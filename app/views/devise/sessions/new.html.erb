<div class="UserInput">
  <h2 class="UserInput--title">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :name, "ユーザーID", class: "field--item" %><br />
      <%= f.text_field :name, autofocus: true, class: "field--input" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード", class: "field--item" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "field--input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class: "field--CheckBox" %>
        <%= f.label :remember_me, "保存する", class: "field--save" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "actions--btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
